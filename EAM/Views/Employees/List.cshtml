@model IEnumerable<DataAccessLayer.Employee>

@{
    ViewData["Title"] = " List";
}

<h1>Employees List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.ID" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@employee.ID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
